        </LinearLayout>

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/question9_option1"
                style="@style/radioButton"
                android:text="@string/monkey" />

            <RadioButton
                android:id="@+id/question9_option2"
                style="@style/radioButton"
                android:text="@string/koala" />

            <RadioButton
                android:id="@+id/question9_option3"
                style="@style/radioButton"
                android:text="@string/goat" />

            <RadioButton
                android:id="@+id/question9_option4"
                style="@style/radioButton"
                android:text="@string/raccoon" />

        </RadioGroup>

        <!--//XML for question # 10-->
        <LinearLayout style="@style/questionLinearLayout">

            <TextView
                style="@style/questionNumberText"
                android:text="@string/number_ten" />

            <TextView
                style="@style/questionText"
                android:text="@string/name_mother" />

        </LinearLayout>

        <EditText
            android:id="@+id/question10_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:hint="@string/write_here"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:onClick="submitAnswers"
            android:text="@string/submit" />


        <TextView
            style="@style/creditText"
            android:text="@string/credit_one" />

        <TextView
            style="@style/creditText"
            android:text="@string/credit_two" />

        <TextView
            style="@style/creditText"
            android:text="@string/credit_three" />

    </LinearLayout>
</ScrollView>