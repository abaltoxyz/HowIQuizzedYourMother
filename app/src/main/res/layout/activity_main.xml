            <RadioButton
                android:id="@+id/question5_option2"
                style="@style/radioButton"
                android:text="@string/germany" />

            <RadioButton
                android:id="@+id/question5_option3"
                style="@style/radioButton"
                android:text="@string/france" />

            <RadioButton
                android:id="@+id/question5_option4"
                style="@style/radioButton"
                android:text="@string/spain" />

        </RadioGroup>

        <!--//XML for question # 6-->
        <LinearLayout style="@style/questionLinearLayout">

            <TextView
                style="@style/questionNumberText"
                android:text="@string/number_six" />

            <TextView
                style="@style/questionText"
                android:text="@string/members_same_college" />

        </LinearLayout>

        <LinearLayout style="@style/radioGroup">

            <CheckBox
                android:id="@+id/question6_option1"
                style="@style/radioButton"
                android:text="@string/marshall" />

            <CheckBox
                android:id="@+id/question6_option2"
                style="@style/radioButton"
                android:text="@string/barney" />

            <CheckBox
                android:id="@+id/question6_option3"
                style="@style/radioButton"
                android:text="@string/ted" />

            <CheckBox
                android:id="@+id/question6_option4"
                style="@style/radioButton"
                android:text="@string/lily" />

        </LinearLayout>

        <!--//XML for question # 7-->
        <LinearLayout style="@style/questionLinearLayout">

            <TextView
                style="@style/questionNumberText"
                android:text="@string/number_seven" />

            <TextView
                style="@style/questionText"
                android:text="@string/musical_instrument" />

        </LinearLayout>

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/question7_option1"
                style="@style/radioButton"
                android:text="@string/guitar" />

            <RadioButton
                android:id="@+id/question7_option2"
                style="@style/radioButton"
                android:text="@string/flute" />

            <RadioButton
                android:id="@+id/question7_option3"
                style="@style/radioButton"
                android:text="@string/trumpet" />

            <RadioButton
                android:id="@+id/question7_option4"
                style="@style/radioButton"
                android:text="@string/horn" />

        </RadioGroup>

        <!--//XML for question # 8-->
        <LinearLayout style="@style/questionLinearLayout">

            <TextView
                style="@style/questionNumberText"
                android:text="@string/number_eight" />

            <TextView
                style="@style/questionText"
                android:text="@string/last_girl_ted_dated" />

        </LinearLayout>

        <RadioGroup style="@style/radioGroup">

            <RadioButton
                android:id="@+id/question8_option1"
                style="@style/radioButton"
                android:text="@string/stella" />

            <RadioButton
                android:id="@+id/question8_option2"
                style="@style/radioButton"
                android:text="@string/jeannette" />

            <RadioButton
                android:id="@+id/question8_option3"
                style="@style/radioButton"
